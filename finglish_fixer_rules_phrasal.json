<!DOCTYPE html>
<html>
  <head>
    <base target="_top">
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 10px;
      }
      .suggestion {
        border-bottom: 1px solid #ccc;
        padding: 8px 0;
      }
      .suggestion strong {
        color: #003366;
      }
      button {
        margin-top: 5px;
      }
    </style>
  </head>
  <body>
    <h2>Finglish Fixer</h2>
    <div id="results">Scanning document...</div>

    <script>
      // Call server-side function and pass results to display
      google.script.run.withSuccessHandler(displaySuggestions).getSuggestionsFromGitHub();

      function displaySuggestions(suggestions) {
        const container = document.getElementById("results");
        container.innerHTML = '';

        if (suggestions.length === 0) {
          container.innerHTML = "<p>No Finglish issues found ðŸŽ‰</p>";
          return;
        }

        suggestions.forEach((sug) => {
          const el = document.createElement("div");
          el.className = "suggestion";
          el.innerHTML = `
            <strong>${sug.finglishItem}</strong><br>
            <em>Matched text: "${sug.matchedText}"</em><br>
            <p>Suggestion: ${sug.suggestion}</p>
            <button onclick="jumpTo(${sug.index}, ${sug.length})">Go to match</button>
          `;
          container.appendChild(el);
        });
      }

      function jumpTo(start, length) {
        google.script.run.jumpToMatch(start, length);
      }
    </script>
  </body>
</html>
